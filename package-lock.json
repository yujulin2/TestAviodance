{
  "name": "c3base",
  "description": "C3 base applications",
  "author": "C3 IoT",
  "homepage": "https://github.com/c3-e/c3base#readme",
  "devDependencies": {
    "danger": "^4.4.6",
    "eslint": "^5.5.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jasmine": "^2.10.1",
    "eslint-plugin-react": "^7.11.1",
    "lint-staged": "^7.2.2",
    "husky": "^0.14.3",
    "commit-message-validator": "^0.1.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c3-e/c3base.git"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:file": "eslint",
    "lint:file:fix": "npm run lint:file -- --fix",
    "lint:staged": "lint-staged",
    "commitmsg": "commit-message-validator",
    "danger": "danger ci"
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "eslint --fix",
        "git add"
      ],
      "base/uiStandardDesignLanguage/ui/SDL/stylesheets/**/*": [
        "yarn --cwd base/uiStandardDesignLanguage/dependencies build",
        "git add base/uiStandardDesignLanguage/ui/content/assets/stylesheets/application.scss.css"
      ]
    },
    "ignore": [
      "base/uiStandardDesignLanguage/ui/content/js/dependencies.js",
      "base/uiStandardDesignLanguage/ui/content/js/test/dependencies.js",
      "base/uiStandardDesignLanguage/test/browser/transformed"
    ]
  },
  "config": {
    "commit-message-validator": {
      "pattern": "[A-Z]+-[0-9]+:\\s.*",
      "errorMessage": "Aborting commit: Please follow the commit message pattern JIRA-ID: commit-msg. Eg, XYZ-1234: fixed abc"
    }
  }
}
